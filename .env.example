# Adsomnia Talk-to-Data Agent - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Everflow API
EVERFLOW_API_KEY=your_everflow_api_key_here
EVERFLOW_BASE_URL=https://api.everflow.io

# LLM Provider (choose one)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application
APP_SECRET_KEY=generate_a_random_secret_key_here
APP_ENV=development
DEBUG=true

# Authentication
AUTH_PASSWORD=set_a_secure_password_here

# Context7 - Documentation API
CONTEXT7_API_KEY=your_context7_api_key_here
CONTEXT7_EVERFLOW_LIBRARY=/websites/developers_everflow_io
